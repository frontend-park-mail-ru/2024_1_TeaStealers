{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "import/extensions": [
           "error",
           "ignorePackages",
           {
             "js": "always"
           }
        ],
        "prefer-regex-literals": [
            "error", 
            {"disallowRedundantWrapping": true}]
    },
    "settings": {
        "import/resolver": {
          "node": {
            "extensions": [".js", ".jsx", ".ts", ".tsx"]
          }
        }
      },
}
